<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Landingpage"
        android:background="#CD0BAA99">

    <TextView
            android:text="TextView"
            android:layout_width="352dp"
            android:layout_height="66dp"
            android:id="@+id/userName"
            android:textAllCaps="true"
            android:background="#D4F2F4"
            android:gravity="center"
            android:textColor="#04445F"
            android:textStyle="bold"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintVertical_bias="0.047" />

    <ImageView
            android:layout_width="369dp"
            android:layout_height="294dp"
            app:srcCompat="@drawable/dump"
            android:id="@+id/Slid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.331" />

    <TextView
            android:text="TextView"
            android:layout_width="349dp"
            android:layout_height="55dp"
            android:id="@+id/Heading"
            android:gravity="center"
            android:background="#D4F2F4"
            android:textColor="#04445F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintVertical_bias="0.663"
            android:textColorHighlight="#EAC462"
            android:textStyle="bold|italic" />

    <Button
            android:text="Previous "
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/Back"
            android:backgroundTint="#ABC337"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.039"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.635"
            android:layout_marginEnd="192dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="120dp" />

    <Button
            android:text="Next"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:id="@+id/next"
            android:backgroundTint="#ABC337"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.635"
            android:layout_marginStart="192dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="120dp" />

    <TextView
            android:text="TextView"
            android:layout_width="415dp"
            android:layout_height="120dp"
            android:id="@+id/Info"
            android:gravity="center"
            android:background="#D4F2F4"
            android:textColor="#04445F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Heading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintVertical_bias="0.158" />

    <TextView
            android:text="Who we are"
            android:layout_width="352dp"
            android:layout_height="34dp"
            android:id="@+id/About"
            android:textColor="#04445F"
            android:background="#D4F2F4"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.187" />

    <Button
            android:text="Trade with us "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trade"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928" />

</androidx.constraintlayout.widget.ConstraintLayout>