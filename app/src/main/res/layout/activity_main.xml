<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#141E15">

    <ImageView
            android:layout_width="322dp"
            android:layout_height="233dp"
            app:srcCompat="@drawable/home"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.23"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:text="Welcome to EcoSpare"
            android:layout_width="366dp"
            android:layout_height="47dp"
            android:id="@+id/textView"
            android:gravity="center"
            android:textSize="34sp"
            android:textColor="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.059" />

    <TextView
            android:text="&quot;Transforming E-Waste into Tomorrowâ€™s Resources&quot;"
            android:layout_width="322dp"
            android:layout_height="61dp"
            android:id="@+id/textView2"
            android:gravity="center"
            android:textColor="#FF9201"
            android:textSize="20sp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintVertical_bias="0.559" />

    <Button
            android:text="Let's GO"
            android:layout_width="179dp"
            android:layout_height="48dp"
            android:id="@+id/button"
            android:textColorLink="#1FBABF"
            android:backgroundTint="#538349"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.91" />

    <EditText
            android:layout_width="332dp"
            android:layout_height="67dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edittextName"
            android:background="#41F30000"
            android:gravity="center"
            android:hint="Enter your name "
            android:textColorHint="#FFFFFF"
            android:textColor="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.677" />

    <EditText
            android:layout_width="225dp"
            android:layout_height="56dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:background="#41F30000"
            android:gravity="center"
            android:hint="Enter you age"
            android:textColorHint="#FFFFFF"
            android:textColor="#8BC34A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.786" />
</androidx.constraintlayout.widget.ConstraintLayout>